@model FPTLibrary.Models.tblBook

@{
    ViewBag.Title = "Add New Book";
    ViewBag.Rollnumber = Session["ROLLNUM"];
}

<div class="menuBar">
    <ul>
        <li style="width:20%;">ACTION</li>
        <li style="width:40%;"><a href="/BookManage">BOOK MANAGE</a></li>
        <li style="width:40%;"><a href="/BorrowsManage">BORROW-TRANSACTION MANAGE</a></li>
    </ul>
</div>

<div class="mainInfo">
    <div class="infoItem">
        
        <div class="formTitle">Add new Book</div>
        
        <div class="formDiv">
            @using (Html.BeginForm("Create",
                          "BookManage",
                          FormMethod.Post,
                          new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <table class="formTable">
                    <tr>
                        <td class="fieldName">
                            ID
                        </td>
                        <td class="fieldInput">
                            <input type="text" name="ID" value="@Request.Params.Get("ID")" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Name
                        </td>
                        <td class="fieldInput">
                            <input type="text" name="Name" value="@Request.Params.Get("Name")" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Author
                        </td>
                        <td class="fieldInput">
                            <input type="text" name="Author" value="@Request.Params.Get("Author")" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Catagories
                        </td>
                        <td class="fieldInput">
                            <select name="Catagories">
                                <option>Design</option>
                                <option>Economic</option>
                                <option>Engineer</option>
                                <option>Others</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Shelf
                        </td>
                        <td class="fieldInput">
                            <input type="text" name="Place" value="@Request.Params.Get("Place")" />
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Description
                        </td>
                        <td class="fieldInput">
                            <textarea name="Description" cols="60" rows="10" style="width:80%;">@Request.Params.Get("Description")</textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Status
                        </td>
                        <td class="fieldInput">
                            <select name="Status">
                                <option>Available</option>
                                <option>Unavailable</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Cover
                        </td>
                        <td class="fieldInput">
                            <input type="file" name="file" id="file" />
                        </td>
                    </tr>
                    <tr>
                        <td>

                        </td>
                        <td class="errorBox">
                            @ViewBag.CreateMessage
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" value="Create" class="actionbutton" /></td>
                    </tr>
                </table>
            }
        </div>

    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
