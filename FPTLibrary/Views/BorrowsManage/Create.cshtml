@model FPTLibrary.Models.tblBorrow

@{
    ViewBag.Title = "New Borrow-Transaction";
    ViewBag.Rollnumber = Session["ROLLNUM"];
}

<div class="menuBar">
    <ul>
        <li style="width:20%;">ACTION</li>
        <li style="width:40%;"><a href="/BookManage">BOOK MANAGE</a></li>
        <li style="width:40%;"><a href="/BorrowsManage">BORROW-TRANSACTION MANAGE</a></li>
    </ul>
</div>

<div class="mainInfo">
    <div class="infoItem">

        <div class="formTitle">Add new Borrow Transaction</div>

        <div class="formDiv">
            <form action="/BorrowsManage/Create" method="POST">
                <table class="formTable">
                    <tr>
                        <td class="fieldName">
                            Book Name
                        </td>
                        <td class="fieldInput">
                            <input type="hidden" name="BookID" value="@ViewBag.BookID" required />
                            <input type="text" name="Book Name" value="@ViewBag.BookName" required readonly disabled />
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Book Instance
                        </td>
                        <td class="fieldInput">
                            <input type="text" name="SubID" value="@Request.Params.Get("SubID")" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="fieldName">
                            Borrower's Email
                        </td>
                        <td class="fieldInput">
                            <input type="text" name="Email" value="@Request.Params.Get("Email")" required />
                        </td>
                    </tr>
                    <tr>
                        <td>
                        </td>
                        <td class="errorBox">
                            @ViewBag.CreateMessage
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Create" class="actionbutton" />
                            <div class="actionbutton" style="margin-left:20px;"><a href="/BookManage/Details/@ViewBag.BookID">Back</a></div>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
